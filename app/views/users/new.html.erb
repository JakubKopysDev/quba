<% provide(:title, "Sign Up" )%>
<div id="signup">
	<h1 style="text-align: center; font-size: 35px;">Sign up</h1>
	<div>
		<div>
			<%= form_for(@user) do |f| %>
				<%= render 'shared/error_messages' %>				
				
				<%= f.label :name %>
				<%= f.text_field :name %>
				<br><br>
				<%= f.label :email %>
				<%= f.email_field :email %>
				<br><br>
				<%= f.label :password %>
				<%= f.password_field :password %>
				<br><br>
				<%= f.label :password_confirmation, "Confirmation" %>
				<%= f.password_field :password_confirmation %>
				<br><br>
				<%= f.submit "Create my account", class: "submit" %>
				<br>
				<small>
					Do you have account already? <%= link_to "Log in there!", login_path %>
				<small>
			<% end %>
			<br><br>
		</div>
	</div>
</div>

